set nocompatible

filetype on
filetype plugin on
filetype indent on
syntax on

set background=light
colorscheme gruvbox

set number
set relativenumber

set shiftwidth=2
set tabstop=2
set expandtab
set nobackup
set incsearch
set hlsearch
set cursorline
set noswapfile
set showcmd

set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx


